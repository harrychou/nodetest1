extends layout1

block content
  h1
    Bible Verses
  table.table
    thead
      tr
        th  主題/Topic
        th  經節
        th  經文
        th  Verse
        th  Text
    tbody
      each v, i in verses
        tr
          td(nowrap)  #{v.cn_topic}/#{v.en_topic}
          td(nowrap)  #{v.cn}
          td  #{v.cn_text}
          td(nowrap) 
            | #{v.en} 
            a(href="/memorize_bible_verse_game_1/#{v.en}") >>
          td  #{v.en_text}
