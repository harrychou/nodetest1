extends layout3

block content
  - var v = verses[Math.floor(Math.random()*verses.length)]
  h1 jQuery UI Drag and Drop Example - #{v.en}
  p
    | - based on this awesome guide http://www.elated.com/articles/drag-and-drop-with-jquery-your-essential-guide/
  #content
    div(style="border:1px solid orange; padding:40px; margin: 30px; color:red;") 
    #successMessage
      h4 Yay! #{v.en_text}
      button(onclick='init()') Play Same Verse Again

    #cardPile  
    #cardSlots  

  script.
    var verse = "#{v.en_text}";
    var correctCards = 0;
    var words = verse.replace(/[.,\s?"!:]/g, ' ').replace(/\s+/g, ' ').replace(/^\s+/g, '').replace(/\s+$/g, '').split(' ');
    var words_copy = words.slice(0); // copy
    // Create the pile of shuffled cards
    words.sort( function() { return Math.random() - .5 } );


